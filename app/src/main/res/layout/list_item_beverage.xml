<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_beverage_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:hint="1221 Cabernet Cuvee"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_item_beverage_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_beverage_description"
        android:padding="5dp"
        android:hint="39171"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/list_item_beverage_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_beverage_description"
        android:layout_toRightOf="@id/list_item_beverage_item_number"
        android:padding="5dp"
        android:hint="$70.10"
        android:textSize="25dp"
        android:gravity="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/list_item_beverage_item_number"/>
</RelativeLayout>